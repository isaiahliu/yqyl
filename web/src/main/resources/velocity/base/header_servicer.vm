<link rel="stylesheet"
	href="/static/css/business/base/header_servicer.css"></link>

<div class="header noprint" ng-controller="headerController">
	<div class="headerBar">
		<div class="left">
			<ul>
				<li><div>
						<a href="/home"><span class="title">#info("SERVICER")</span></a>
					</div></li> #if(${authentication}) #if(${authentication.token.authenticated})
				#else
				<li><div>
						<a href="/login"><span> #button("LOGIN_REGISTER")</span></a>
					</div></li> #end #end
			</ul>

		</div>
		<div class="right">
			<ul style="margin-right: 20px;">
				#if(${authentication}) #if(${authentication.token.authenticated})
				#if(${security.hasAccessRightByName('SUPPLIER', false)})
				<li><div>
						<a href="javascript:void(0)"
							ng-click="checkingRequirements=!checkingRequirements"><span>#button("REQUIREMENT_INFORMATION")</span><span
							class="ng-hide" ng-show="newRequirementCount>0">({{newRequirementCount}})</span></a>
					</div></li>#end
				<li><div>
						<span>#label("WELCOME") ${authentication.token.username}
							#label("SERVICER")</span>
					</div></li>
				<li><div>
						<span><a href="javascript:void(0)" ng-click="logout()"><span>#label("LOGOUT")</span></a></span>
					</div></li> #end #end
			</ul>
			<div ng-show="checkingRequirements"
				style="background: grey; position: absolute; top: 80px; width: 400px; right: 10px; min-height: 200px;">
				<table>
					<tbody>
						<tr ng-repeat="requirement in requirements">
							<td>{{requirement.phone}}</td>
							<td>{{requirement.address}}</td>
							<td>{{requirement.comment}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<script src="/static/js/business/base/header_servicer.js"></script>

